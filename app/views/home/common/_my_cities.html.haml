.list-group.w-auto
  - my_cities.each do|city|
    - city_presenter = CityPresenter.new(self, city)
    %a.list-group-item.list-group-item-action.d-flex.gap-3.py-3{"aria-current" => "true", :href => "#"}
      %img.rounded-circle.flex-shrink-0{:alt => city_presenter.name, :height => "32", :src => city_presenter.icon, :width => "32"}/
      .d-flex.gap-2.w-100.justify-content-between
        %div
          %h6.mb-0=city_presenter.name
          %p.mb-0.opacity-75=city_presenter.country
        %small.opacity-50.text-nowrap=city_presenter.created_at
